<aiml version="1.0.1" encoding="UTF-8">
    <!-- std-startup.xml -->

    <!-- Category is an atomic AIML unit -->
    <category>

        <!-- Pattern to match in user input -->
        <!-- If user enters "LOAD AIML B" -->
        <pattern>LOAD AIML B</pattern>

        <!-- Template is the response to the pattern -->
        <!-- This learn an aiml file -->
        <template>
            <learn>botinho/categorias_aiml/saudacoes.aiml</learn>
            <learn>botinho/categorias_aiml/encerramentos.aiml</learn>
            <learn>botinho/categorias_aiml/ajuda.aiml</learn>
            <learn>botinho/categorias_aiml/opcoes.aiml</learn>
            <learn>botinho/categorias_aiml/default.aiml</learn>
            <!-- You can add more aiml files here -->
            <!--<learn>more_aiml.aiml</learn>-->
        </template>
        
    </category>

</aiml>